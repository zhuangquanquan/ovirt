<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="constants" type="org.ovirt.engine.ui.common.CommonApplicationConstants" />

    <ui:style>
        .container {
            padding-left: 10px;
        }

        .radioButton {
            padding-right: 20px;
        }

        .radioButton label {
            padding-left: 3px;
            top: -2px;
            position: relative;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.container}">
        <g:RadioButton ui:field="users" name="type" addStyleNames="{style.radioButton}" text="{constants.user}" />
        <g:RadioButton ui:field="groups" name="type" addStyleNames="{style.radioButton}" text="{constants.group}" />
    </g:FlowPanel>

</ui:UiBinder>