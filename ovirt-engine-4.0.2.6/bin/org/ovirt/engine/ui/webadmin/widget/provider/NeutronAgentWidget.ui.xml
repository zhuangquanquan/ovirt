<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
    xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
    xmlns:w="urn:import:org.ovirt.engine.ui.common.widget"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants'/>
    <ui:style>
        .messagingServerHeader {
            font-weight: bold;
        }
    </ui:style>

    <g:FlowPanel>
        <b:Row>
            <w:EntityModelWidgetWithInfo ui:field="mappings" usePatternFly="true" labelColSize="LG_6" widgetColSize="LG_6" />
        </b:Row>
        <b:Row>
            <b:Column size="LG_12">
                <g:Label text="{constants.messagingConfiguration}" addStyleNames="{style.messagingServerHeader}"/>
            </b:Column>
        </b:Row>
        <b:Row>
            <e:ListModelListBoxEditor ui:field="brokerTypeEditor" usePatternFly="true" labelColSize="LG_6" widgetColSize="LG_6" />
        </b:Row>
        <b:Row>
            <ge:StringEntityModelTextBoxEditor ui:field="messagingServer" usePatternFly="true" labelColSize="LG_6" widgetColSize="LG_6" />
        </b:Row>
        <b:Row>
            <ge:StringEntityModelTextBoxEditor ui:field="messagingServerPort" usePatternFly="true" labelColSize="LG_6" widgetColSize="LG_6" />
        </b:Row>
        <b:Row>
            <ge:StringEntityModelTextBoxEditor ui:field="messagingServerUsername" usePatternFly="true" labelColSize="LG_6" widgetColSize="LG_6" />
        </b:Row>
        <b:Row>
            <ge:StringEntityModelPasswordBoxEditor ui:field="messagingServerPassword" usePatternFly="true" labelColSize="LG_6" widgetColSize="LG_6" />
        </b:Row>
    </g:FlowPanel>

</ui:UiBinder>
